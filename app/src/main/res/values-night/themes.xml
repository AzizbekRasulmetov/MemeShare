<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemeFire" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/bg_grey_dark</item>

        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="CustomAppBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
</resources>